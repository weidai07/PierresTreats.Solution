@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Flavor>;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
}

@foreach (Flavor flavor in @Model)
{
  <li>@Html.ActionLink($"{flavor.Description}", "Details", new { id = flavor.FlavorId }) | @flavor.Treat.Name</li>
}

<p>@Html.ActionLink("Add new flavor", "Create")</p>
<p>@Html.ActionLink("Add new treat", "Create", "Treats")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>






